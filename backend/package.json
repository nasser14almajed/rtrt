    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "serverless-http": "^3.2.0",
    "zod": "^3.23.8",
    "openai": "^4.57.0"
  },
  "devDependencies": {
    "prisma": "^5.16.1",
    "tsx": "^4.19.1",
    "typescript": "^5.4.5",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.11",
    "esbuild": "^0.23.0",
    "eslint": "^9.8.0"
  },
  "engines": {
    "node": ">=20.x"
  }
